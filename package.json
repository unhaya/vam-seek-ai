{
  "name": "vam-rgb",
  "version": "3.0.0",
  "description": "VAM-RGB v3.0 Temporal Codec - Connect, don't fill",
  "main": "src/main/main.js",
  "bin": {
    "vamrgb": "./src/cli/index.js"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "vamrgb": "node src/cli/index.js"
  },
  "build": {
    "appId": "com.vam.rgb",
    "productName": "VAM-RGB",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "bin/",
        "to": "bin/",
        "filter": ["**/*"]
      },
      {
        "from": "models/",
        "to": "models/",
        "filter": ["ggml-base.bin"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "vam-rgb",
    "video",
    "temporal-codec",
    "ai",
    "causality",
    "electron",
    "claude",
    "deepseek"
  ],
  "author": "HAASIY",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/unhaya/vam-rgb"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "openai": "^4.0.0",
    "commander": "^11.0.0",
    "sharp": "^0.33.0",
    "archiver": "^6.0.0",
    "adm-zip": "^0.5.10",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "jest": "^29.0.0"
  }
}
